<html>
<header>
  <nav class="navbar navbar-expand-md navbar-light bg-warning">
    <a class="navbar-brand">TinyApp</a>
  </nav>
</header>

<head>
  <%- include('partials/_document_head') %>
</head>

<body>
  
  <div class= "container">
    <h3 style= " margin: 16px">Register</h3>
  <form method="post" action="/register">
    <div style="width: 15em;">
      <div class="form-group">
        <label for="email">Email:</label>
        <input style="width: 100%; margin: 4px" type="text" name="email" id="email"
          placeholder="Please enter your email">
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input style="width: 100%; margin: 4px" type="password" name="password" id="password"
          placeholder="Please enter your password">
      </div>
      <div class="form-group">
        <label for="username">Username:</label>
        <input style="width: 100%; margin: 4px" type="username" name="username" id="username"
          placeholder="Please enter a username">
      </div>

      <input type="submit" class="btn btn-primary" value="Register" />
    </div>
  </form>
</div>
</body>

</html>